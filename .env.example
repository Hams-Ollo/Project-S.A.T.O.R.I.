# Application Settings
APP_NAME=SATORI-AI
ENVIRONMENT=development
DEBUG=True
API_VERSION=v0.0.1

# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Settings
STREAMLIT_PORT=8501

# Database Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=satori_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# Vector Database Settings
CHROMA_PERSIST_DIRECTORY=./data/chroma

# Security
SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO                    # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR=logs                      # Directory for log files
LOG_FORMAT=detailed              # simple, detailed
LOG_RETENTION_DAYS=30            # Number of days to keep log files
ERROR_LOG_MAX_SIZE=10485760      # 10MB in bytes
CONSOLE_LOG_ENABLED=True         # Enable console logging
FILE_LOG_ENABLED=True            # Enable file logging

# Optional: AI Model Settings
OPENAI_API_KEY=your_openai_api_key
# Add other AI model API keys as needed 